<view class="wm-input_body" style="width: {{width}}; max-width: {{maxWidth}}">
  <input
    class="input"
    value="{{value}}"
    bind:input="inputVal"
    type="{{type}}"
    placeholder="{{placeholder}}"
    maxlength="{{maxlength}}"
    disabled="{{disabled}}"
    style="height: {{height}}; line-height: {{lineHeight}}; padding: {{padding}}; font-size: {{fontSize}}; border-color: {{borderColor}}; background-color: {{bgColor}}; color: {{color}}; border-radius: {{borderRadius}};"
  />
</view>